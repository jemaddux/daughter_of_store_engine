- form_method = @address.new_record? ? "POST" : "PUT"
= form_for @address, method: form_method do |f|
  - if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this billing address from being saved:"
      %ul
        - @address.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.select :state, options_for_select(us_states, "CO")
  .field
    = f.label :zipcode
    = f.text_field :zipcode
  .field
    = f.label :phone
    = f.text_field :phone
  .actions
    = f.submit 'Save', class:"button"
