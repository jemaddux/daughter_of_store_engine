.row
  / Main Content Section
  / This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens
  .large-9.push-3.columns
    %h3
      = "Store Name: #{link_to @store.name, home_path(@store)}".html_safe
    %h6= "Status: #{@store.status}"
    %p 
      Description: 
    %p
      = @store.description
    
  / This is source ordered to be pulled to the left on larger screens
  .large-3.pull-9.columns
    .section-container.accordion{"data-section" => "accordion"}
      %section
        %p.title.button{"data-section-title" => ""}
          = link_to 'Edit Store Details', store_admin_edit_store_path(@store.path)
        .content{"data-section-content" => ""}
          %p Content of section 1.
      %section
        %p.title.button{"data-section-title" => ""}
          = link_to 'Products', store_admin_products_path(@store.path)
        .content{"data-section-content" => ""}
          %p Content of section 2.
      %section
        %p.title.button{"data-section-title" => ""}
          = link_to 'Back to Store', home_path(@store.path)
        .content{"data-section-content" => ""}
          %p Content of section 2.
      %section
        %p.title.button{"data-section-title" => ""}
          = link_to "New Blog Post", new_article_path(current_store)
        .content{"data-section-content" => ""}
          %p Content of section 2.
      %section
        %p.title.button{"data-section-title" => ""}
          = link_to "New Page", new_page_path(current_store)
          = render partial: "store_admin/stores/show_partials/pages"
      %section
        %p.title.button{"data-section-title" => ""}
          = render partial: "store_admin/stores/show_partials/store_admins"
      %section
        %p.title.button{"data-section-title" => ""}
        
        = render partial: "store_admin/stores/show_partials/store_stockers"

