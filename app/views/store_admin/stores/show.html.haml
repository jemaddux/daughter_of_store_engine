%h4= "Store Name: #{@store.name}"
%h6= "Description: #{@store.description}"
%h6= "Path: #{@store.path}"
%h6= "Status: #{@store.status}"

= link_to 'Edit Store Details', store_admin_edit_store_path(@store.path)
\|
= link_to 'Products', store_admin_products_path(@store.path)
\|
= link_to 'Back to Store', home_path(@store.path)
%hr
= link_to "New Page", new_page_path(current_store), class:"button"
%ul#store-pages
  Current Pages:
  - @store.pages.each do |page|
    %li
      =link_to "Preview: '#{page.title}'", page_path(current_store,page)
      |
      =link_to "Edit", edit_page_path(current_store,page)
      |
      =link_to "Delete", page_path(current_store,page), method: :delete, confirm: "You will lose all information already typed into this page, are you sure you want to delete?"



%hr
= link_to "New Background Image", new_background_image_path(current_store), class: "button"
%br/

%ul.small-block-grid-2.large-block-grid-4#background-images
  - @store.background_images.each do |i|
    %li
      = link_to image_tag(i.photo.url, size: "100x100"),background_image_path(current_store,i)
      %br/
      = link_to "View: #{i.photo_file_name}", background_image_path(current_store,i)
      %br/
      = link_to "Edit", edit_background_image_path(current_store,i)
      |
      = link_to "Delete", background_image_path(current_store,i),method: :delete, confirm:"are you sure you want to delete this image? It will change your store's home page"

%hr/

%h4 Current Store Admins
%ul
  - @store.admins.each do |admin|
    %li
      = admin.email

      = button_to "remove admin", remove_store_admin_path(@store, :id => admin.id), :method => :put, confirm: "Are you sure you want to remove this Admin?"

= form_tag add_store_admin_path(@store), method: :put, class: "navbar-form" do
  %input.large-3.columns{:placeholder => "Email", name:"email", :type => "email"}/
  %br
  %br
  %br
  = submit_tag "Add New Admin", class: "button"


%hr/

%h4 Current Store Stockers
%ul
  - @store.stockers.each do |stocker|
    %li
      =stocker.email
      = button_to "remove stocker", remove_store_stocker_path(@store, :id => stocker.id), :method => :put, confirm: "Are you sure you want to remove this stocker?"

= form_tag add_store_stocker_path(@store), method: :put, class: "navbar-form" do
  %input.large-3.columns{:placeholder => "Email", name:"email", :type => "email"}/
  %br
  %br
  %br
  = submit_tag "Add New Stocker", class: "button"
