.row.content
  .large-12.columns
    %ul.button-group
      %li
    .row
      .large-12.columns
        %ul.breadcrumbs
          %li
            = link_to "Products", store_admin_products_path
          - @product.categories.each do |category|
            %li
              = link_to category.name, admin_category_path(current_store,category)
          %li.current
            = @product.name
    .row
      .large-6.columns
        =image_tag @product.image.url, class: "product-feature"
      .large-6.columns
        %h3.show-for-small Header
        %h2.hide-for-small.left= @product.name
        %h2.hide-for-small.right= "#{number_to_currency(@product.price)}"
        %hr/
        %h5.subheader= @products
        %h4 Description
        %p= @product.description
        %hr/
        = link_to 'Edit', store_admin_edit_product_path(@store.path, @product.id), class: "button large large-3 small-2 columns"
        .row


