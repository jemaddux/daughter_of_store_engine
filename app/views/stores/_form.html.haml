= form_for @store do |f|
  - if @store.errors.any?
    #error_explanation
      %h2= "#{pluralize(@store.errors.count, "error")} prohibited this store from being saved:"
      %ul
        - @store.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.label :store_name, "Store Name"
    = f.text_field :name
    = f.label :slug, "URL (Please use letters and hyphens)"
    = f.label :slug, "* Ex: my-awesome-url"
    = f.text_field :path
    = f.label :description, "Store Description"
    = f.text_field :description
    = f.submit 'Save', class:"button"
