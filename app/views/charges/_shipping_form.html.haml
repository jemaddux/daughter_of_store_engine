= form_tag shipping_addresses_path, method: :post, id:"shipping-form" do |f|
  .field
    = hidden_field_tag "shipping_address[customer_id]", current_user.id
  .field
    = label_tag :street
    = text_field_tag "shipping_address[street]"
  .field
    = label_tag :city
    = text_field_tag "shipping_address[city]"
  .field
    = label_tag :state
    = select_tag "shipping_address[state]", options_for_select(us_states, "CO")
  .field
    = label_tag :zipcode
    = text_field_tag "shipping_address[zipcode]"
  .field
    = label_tag :phone
    = text_field_tag "shipping_address[phone]"
  .action
    = submit_tag 'Save', class:"button"
